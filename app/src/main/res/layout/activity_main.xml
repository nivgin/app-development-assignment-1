<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    android:gravity="center">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/cell_border"
        app:rowCount="3"
        app:columnCount="3">
        <ImageView
            android:id="@+id/cell0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/cell_border"
            app:layout_column="0"
            app:layout_row="0" />
        <ImageView
            android:id="@+id/cell1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/cell_border"
            app:layout_column="1"
            app:layout_row="0" />
        <ImageView
            android:id="@+id/cell2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/cell_border"
            app:layout_column="2"
            app:layout_row="0" />
        <ImageView
            android:id="@+id/cell3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/cell_border"
            app:layout_column="0"
            app:layout_row="1" />
        <ImageView
            android:id="@+id/cell4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/cell_border"
            app:layout_column="1"
            app:layout_row="1" />
        <ImageView
            android:id="@+id/cell5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/cell_border"
            app:layout_column="2"
            app:layout_row="1" />
        <ImageView
            android:id="@+id/cell6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/cell_border"
            app:layout_column="0"
            app:layout_row="2" />
        <ImageView
            android:id="@+id/cell7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/cell_border"
            app:layout_column="1"
            app:layout_row="2" />
        <ImageView
            android:id="@+id/cell8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/cell_border"
            app:layout_column="2"
            app:layout_row="2" />
    </androidx.gridlayout.widget.GridLayout>

</LinearLayout>